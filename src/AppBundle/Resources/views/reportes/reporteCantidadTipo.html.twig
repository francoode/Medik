{% extends 'front.html.twig' %}


{% block body %}
    <div class="container-fluid">
        <h3> Cantidad Tipo Análisis Realizados</h3>
        <br>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-2 col-md-offset-1">
                {{ form_label(form.fechaInicio) }}
            </div>
            <div class="col-md-3">
                {{ form_widget(form.fechaInicio) }}
            </div>
            <div class="col-md-3">
                {{ form_errors(form.fechaInicio) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-2 col-md-offset-1">
                {{ form_label(form.fechaFin) }}
            </div>
            <div class="col-md-3">
                {{ form_widget(form.fechaFin) }}
            </div>
            <div class="col-md-3">
                {{ form_errors(form.fechaFin) }}
            </div>
        </div>

        {{ form_row(form._token) }}


        <br>
        <div class="row">
            <div class="col-md-1 col-md-offset-3">
                {{ form_widget(form.buscar) }}
            </div>
        </div>

        {{ form_end(form, {'render_rest':false}) }}
        <br>
        <hr>

            {% if cantidad is defined %}
                <div class="row">
                    <div class="col-md-2 col-md-offset-1">
                       <b> Tipo de Análisis</b>

                    </div>
                    <div class="col-md-2" style="text-align: center">
                        <b>Cantidad</b>
                    </div>
                    <div class="col-md-2" style="text-align: center">
                       <b> Porcentaje %</b>
                    </div>
                </div>

                     {% for c in cantidad %}
                         <div class="row">
                             <div class="col-md-2 col-md-offset-1">
                                 {{ c.nombre }}

                             </div>
                             <div class="col-md-2" style="text-align: center">
                                 {{ c.cantidad }}
                             </div>
                             <div class="col-md-2" style="text-align: center">
                                 {{ ((c.cantidad * 100) // total.total) }} %
                             </div>
                         </div>





                     {% endfor %}
            {% endif %}
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });

            $('hr').css('border-top', '1px solid #8c8b8b')

            $('.js-example-basic-single').select2();
        });
    </script>
{% endblock javascripts %}